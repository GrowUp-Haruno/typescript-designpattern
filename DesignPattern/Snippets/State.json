{
  "State pattern": {
    "prefix": "state",
    "description": "GoFのStateパターン",
    "body": [
      "class Context {",
      "\tprivate _state: State;",
      "\tconstructor(initialState: State) {",
      "\t\tthis.setState(initialState);",
      "\t}",
      "\tsetState(newState: State) {",
      "\t\tthis._state = newState;",
      "\t\tthis._state.setContext(this);",
      "\t}",
      "",
      "\tnext(): void {",
      "\t\tthis._state.next();",
      "\t}",
      "\tprev(): void {",
      "\t\tthis._state.prev();",
      "\t}",
      "}",
      "",
      "abstract class State {",
      "\tprotected _context: Context;",
      "\tsetContext(newContext: Context): void {",
      "\t\tthis._context = newContext;",
      "\t}",
      "",
      "\tabstract next(): void;",
      "\tabstract prev(): void;",
      "}",
      "",
      "class State1 extends State {",
      "\tnext(): void {",
      "\t\t// 遷移させたい場合は遷移先のステートインスタンスをsetState()の引数に入れてください。",
      "\t\t// 遷移させない場合はsetState()は不要です。",
      "\t\t// this._context.setState()",
      "\t}",
      "\tprev(): void {",
      "\t\t// 遷移させたい場合は遷移先のステートインスタンスをsetState()の引数に入れてください。",
      "\t\t// 遷移させない場合はsetState()は不要です。",
      "\t\t// this._context.setState()",
      "\t}",
      "}"
    ]
  }
}
